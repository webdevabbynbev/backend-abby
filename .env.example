# Timezone (default UTC, boleh diganti)
TZ=UTC

# App & Server Settings
PORT=3333 # sesuaikan port nya
HOST=localhost
LOG_LEVEL=info
APP_TITLE=Abby-n-Bev E-commerce
APP_URL=http://localhost:3333
APP_CLIENT=http://localhost:3333
APP_KEY=
NODE_ENV=development

# Database Settings
DB_CONNECTION=mysql # pilihan: mysql / pg
DB_HOST=localhost
DB_PORT=db_port # sesuaikan DB port nya
DB_USER=db_user
DB_PASSWORD= # kosongkan
DB_DATABASE=abbynbev # ini untuk nama database sekarang
DB_SSL=false # true jika butuh koneksi SSL

# Mailer / SMTP Settings 
SMTP_HOST=smtp_host
SMTP_PORT=smtp_port
SMTP_USERNAME=smtp_username
SMTP_PASSWORD=smtp_password
DEFAULT_FROM_EMAIL=email@example.com

# File Storage Settings
DRIVE_DISK=fs # pilihan: fs / local

# AWS S3 Settings (optional, kalo pakai cloud storage)
AWS_ACCESS_KEY_ID=aws_access_key
AWS_SECRET_ACCESS_KEY=aws_secret_key
AWS_REGION=aws_region
S3_BUCKET=bucket_name

# Google OAuth Settings (optional, kalo pakai Google login)
GOOGLE_CLIENT_ID=client_id
GOOGLE_CLIENT_SECRET=secret_client

# Komerce Raja Ongkir API Settings
KOMERCE_COST_API_KEY=komerce_cost_api
KOMERCE_COST_BASE_URL=komerce_cost_base_url
KOMERCE_DELIVERY_API_KEY=komerce_delivery_api
KOMERCE_DELIVERY_BASE_URL=komerce_delivery_base_url
# KOMERCE_DELIVERY_BASE_URL=https://api.collaborator.komerce.id/

# Komerce Origin settings, sesuaikan dengan lokasi toko
KOMERCE_ORIGIN=12345
KOMERCE_ORIGIN_TYPE=district

# Midtrans Payment Gateway Settings
MIDTRANS_SERVER_KEY=midtrans_server_key
MIDTRANS_CLIENT_KEY=midtrans_client_key
MIDTRANS_ENV=sandbox # pilihan: sandbox / production

# WhatsApp API Settings
WHATSAPP_PHONE_NUMBER_ID=whatsapp_business_number # ganti dengan nomor whatsapp business abby n bev
WHATSAPP_ACCESS_TOKEN=access_token_whatsapp_business
WHATSAPP_API_URL=link_graph

# Biteship
BITESHIP_BASE_URL=https://api.biteship.com
BITESHIP_API_KEY=api_biteship
BITESHIP_COURIERS=delivery_partner_lists
COMPANY_NAME=company_name
COMPANY_CONTACT_NAME=contact_name
COMPANY_PHONE=company_phone_number
COMPANY_EMAIL=company_email
COMPANY_ADDRESS=company_address
COMPANY_POSTAL_CODE=postal_code
COMPANY_PINPOINT=company_location_coodinate

# cloudinary API settings
CLOUDINARY_CLOUD_NAME=cloud_name
CLOUDINARY_API_KEY=api_key
CLOUDINARY_API_SECRET=secret_api
CLOUDINARY_URL=url_cloudinary
