# Timezone (default UTC, boleh diganti)
TZ=UTC

# App & Server Settings
PORT=3333 # sesuaikan port nya
HOST=localhost
LOG_LEVEL=info
APP_TITLE=Abby-n-Bev E-commerce
APP_URL=http://localhost:3333
APP_CLIENT=http://localhost:3333
APP_KEY=your_app_key
NODE_ENV=development

# Database Settings
DB_HOST=localhost
DB_PORT=db_port # sesuaikan DB port nya
DB_USER=db_user
DB_PASSWORD= # kosongkan
DB_DATABASE=abbynbev # ini untuk nama database sekarang

# Mailer / SMTP Settings 
SMTP_HOST=smtp_host
SMTP_PORT=smtp_port
SMTP_USERNAME=smtp_username
SMTP_PASSWORD=smtp_password
DEFAULT_FROM_EMAIL=email@example.com

# File Storage Settings
DRIVE_DISK=fs

# AWS S3 Settings (optional, kalo pakai cloud storage)
AWS_ACCESS_KEY_ID=aws_access_key
AWS_SECRET_ACCESS_KEY=aws_secret_key
AWS_REGION=aws_region
S3_BUCKET=bucket_name

# Google OAuth Settings (optional, kalo pakai Google login)
GOOGLE_CLIENT_ID=google_client_id
GOOGLE_CLIENT_SECRET=google_client_secret

# Komerce Raja Ongkir API Settings
